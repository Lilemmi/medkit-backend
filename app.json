{
  "expo": {
    "name": "Smart Aid Kit",
    "slug": "smart-aid-kit",
    "version": "2.0.0",
    "orientation": "portrait",

    "icon": "./assets/images/icon.png",
    "scheme": "smartaidkit",
    "userInterfaceStyle": "automatic",

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.profesional88.smartaidkit",
      "infoPlist": {
        "CFBundleDisplayName": "Smart Aid Kit",
        "NSFaceIDUsageDescription": "Для безопасного входа.",
        "NSUserTrackingUsageDescription": "Приложение использует уведомления.",
        "NSUserNotificationUsageDescription": "Приложение отправляет уведомления о лекарствах.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["smartaidkit", "exp+smart-aid-kit"]
          }
        ]
      }
    },

    "android": {
      "package": "com.profesional88.smartaidkit",
      "permissions": [
        "INTERNET",
        "VIBRATE",
        "POST_NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#E6F4FE"
      }
    },

    "plugins": [
      "expo-router",
      "expo-sqlite",

      [
        "expo-build-properties",
        {
          "android": {
            "newArchEnabled": true,
            "enableProguardInReleaseBuilds": false,
            "enableShrinkResourcesInReleaseBuilds": false,
            "enableMinifyInReleaseBuilds": false,
            "gradleProperties": {
              "org.gradle.jvmargs": "-Xmx8192m -XX:MaxMetaspaceSize=4096m",
              "kotlin.daemon.jvmargs": "-Xmx4096m",
              "ksp.jvmargs": "-Xmx4096m",
              "org.gradle.daemon": "true",
              "org.gradle.parallel": "true",
              "org.gradle.configureondemand": "true"
            }
          }
        }
      ],

      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#1D9BF0",
          "mode": "production",
          "androidMode": "default",
          "iosDisplayInForeground": true,
          "androidChannelId": "medication-reminders",
          "androidChannelName": "Напоминания о лекарствах",
          "androidChannelDescription": "Критически важные напоминания о приеме лекарств",
          "androidChannelImportance": "max",
          "androidChannelShowBadge": true,
          "androidChannelEnableVibrate": true,
          "androidChannelEnableLights": true
        }
      ],

      [
        "expo-secure-store",
        {
          "faceIDPermission": "Используется для безопасного входа."
        }
      ],

      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],

      "expo-updates"
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },

    "extra": {
      "railwayApiUrl": "https://medkit-backend-production.up.railway.app",
      "apiUrl": "https://medkit-backend-production.up.railway.app",
      "router": {}
    },

    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },

    "runtimeVersion": "2.0.0",
    "owner": "profesional88"
  }
}
